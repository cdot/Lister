<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cdot.lists">

    <application
        android:allowBackup="true"
        android:icon="@drawable/checklist_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cdot.lists.ChecklistsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.json"
                    android:scheme="file" />
                <data android:pathPattern=".*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.json" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="application/json"
                    android:pathPattern=".*\\.json"
                    android:scheme="content" />
                <data android:pathPattern=".*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.json" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.json"
                    android:scheme="http" />
                <data android:pathPattern=".*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.json" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.json"
                    android:scheme="https" />
                <data android:pathPattern=".*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\.json" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.json" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cdot.lists.ChecklistActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.DayNight" />
        <activity
            android:name="com.cdot.lists.SettingsActivity"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:label="@string/settings" />
        <activity
            android:name="com.cdot.lists.HelpActivity"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:label="@string/app_name" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.cdot.lists.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- ressource file to create -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/internal_file_paths">
            </meta-data>
        </provider>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
