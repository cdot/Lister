<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/SettingsScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/backing_store_uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/change_store"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_action_open"
                android:contentDescription="@string/action_change_store"
                android:onClick="changeStoreClicked" />

            <ImageButton
                android:id="@+id/create_store"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_action_create"
                android:contentDescription="@string/action_create_store"
                android:onClick="createStoreClicked" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/grey_out_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="greyOutCheckedItemsClicked"
            android:text="@string/dim_checked_items" />

        <CheckBox
            android:id="@+id/strike_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="strikeCheckedItemsClicked"
            android:text="@string/strike_through_checked_items" />

        <CheckBox
            android:id="@+id/force_alpha_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="forceAlphaSortClicked"
            android:text="@string/force_alpha_sort" />

        <CheckBox
            android:id="@+id/show_checked_at_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showCheckedAtEndClicked"
            android:text="@string/show_checked_at_end" />

        <CheckBox
            android:id="@+id/auto_delete_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="autoDeleteCheckedItemsClicked"
            android:text="@string/auto_delete_checked_items" />

        <CheckBox
            android:id="@+id/entire_row_toggles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="entireRowTogglesClicked"
            android:text="@string/entire_row_toggles_check_box" />

        <CheckBox
            android:id="@+id/left_hand_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="leftHandOperationClicked"
            android:text="@string/left_hand_operation" />

        <CheckBox
            android:id="@+id/add_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addToTopClicked"
            android:text="@string/add_new_item_at_top_of_list" />

        <CheckBox
            android:id="@+id/always_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="alwaysShowClicked"
            android:text="@string/show_list_in_front_of_lock_screen" />

        <CheckBox
            android:id="@+id/open_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openLatestClicked"
            android:text="@string/open_latest_list_at_startup" />

        <CheckBox
            android:id="@+id/warn_about_duplicates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="warnAboutDuplicatesClicked"
            android:text="@string/warn_about_duplicates" />

        <Spinner
            android:id="@+id/text_size_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/text_size_list"
            android:prompt="@string/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_size" />
    </LinearLayout>
</ScrollView>
