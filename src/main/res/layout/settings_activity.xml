<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ActivitySettings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/SettingsScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/change_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeStoreClicked"
            android:text="@string/action_change_store" />

        <Button
            android:id="@+id/create_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createStoreClicked"
            android:text="@string/action_create_store" />

        <CheckBox
            android:id="@+id/DimCheckedItemsCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dimCheckedItemsCBClicked"
            android:text="@string/dim_checked_items" />

        <CheckBox
            android:id="@+id/StrikeThroughCheckedItemsCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="strikeThroughCheckedItemsCBClicked"
            android:text="@string/strike_through_checked_items" />

        <CheckBox
            android:id="@+id/MoveCheckedItemsToBottomCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="moveCheckedItemsToBottomCBClicked"
            android:text="@string/mov_checked_items_to_bottom" />

        <CheckBox
            android:id="@+id/AutoDeleteCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="autoDeleteCBClicked"
            android:text="@string/auto_delete_checked_items" />

        <CheckBox
            android:id="@+id/EntireRowTogglesCheckboxCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="entireRowTogglesCheckboxCBClicked"
            android:text="@string/entire_row_toggles_check_box" />

        <CheckBox
            android:id="@+id/CheckBoxOnLeftSideCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBoxOnLeftSideCBClicked"
            android:text="@string/left_hand_operation" />

        <CheckBox
            android:id="@+id/AddNewItemsAtTopOfListCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNewItemsAtTopOfListCBClicked"
            android:text="@string/add_new_item_at_top_of_list" />

        <CheckBox
            android:id="@+id/ShowListInFrontOfLockScreenCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showListInFrontOfLockScreenCBClicked"
            android:text="@string/show_list_in_front_of_lock_screen" />

        <CheckBox
            android:id="@+id/OpenLatestListAtStartupCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openLatestListAtStartupCBClicked"
            android:text="@string/open_latest_list_at_startup" />

        <CheckBox
            android:id="@+id/WarnAboutDuplicatesCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="warnAboutDuplicatesCBClicked"
            android:text="@string/warn_about_duplicates" />

        <CheckBox
            android:id="@+id/DarkBackgroundCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="darkBackgroundCBClicked"
            android:text="@string/dark_background" />

        <Spinner
            android:id="@+id/TextSizeSpinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/text_size_list"
            android:prompt="@string/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_size" />
    </LinearLayout>
</ScrollView>
